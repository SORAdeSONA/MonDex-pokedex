<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokedex_nav"
    app:startDestination="@id/main_pokedex_fragment">

    <fragment
        android:id="@+id/main_pokedex_fragment"
        android:name="com.sds.pokemonguide.fragments.MainPokedexFragment"
        android:label="List"
        tools:layout="@layout/main_pokedex_fragment">
        <action
            android:id="@+id/action_main_pokedex_fragment_to_detail_pokedex_fragment"
            app:destination="@id/detail_pokedex_fragment" />
    </fragment>

    <fragment
        android:id="@+id/detail_pokedex_fragment"
        android:name="com.sds.pokedexsdsgo.fragments.DetailPokedexFragment"
        android:label="Detail"
        tools:layout="@layout/detail_pokedex_fragment">
        <action
            android:id="@+id/action_detail_pokedex_fragment_to_main_pokedex_fragment"
            app:destination="@id/main_pokedex_fragment" />
    </fragment>

</navigation>