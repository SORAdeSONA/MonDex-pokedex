                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:text="item"
                            app:layout_constraintStart_toEndOf="@+id/category_pokemon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/category_berries"
                            style="@style/CategoryTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:text="berry"
                            app:layout_constraintStart_toEndOf="@+id/category_item"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/category_moves"
                            style="@style/CategoryTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:text="move"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/category_berries"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
