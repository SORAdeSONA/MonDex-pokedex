                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/id_category_gender"
                    app:layout_constraintStart_toEndOf="@+id/id_category_gender"
                    app:layout_constraintTop_toTopOf="@+id/id_category_gender"
                    app:srcCompat="@drawable/question" />

                <ImageView
                    android:id="@+id/habitat_info_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/id_category_habitat"
                    app:layout_constraintStart_toEndOf="@+id/id_category_habitat"
                    app:layout_constraintTop_toTopOf="@+id/id_category_habitat"
